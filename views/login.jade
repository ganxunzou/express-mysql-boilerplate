extends layout

block css
  link(rel='stylesheet', href='/css/signin.css')

block nav

block content
  script.
    var something = function(type) {
      document.getElementById('signIn').className="p-3 m-0";
      document.getElementById('signUp').className="p-3 m-0";
      document.getElementById('signInForm').className="px-5 view-change view-hide";
      document.getElementById('signUpForm').className="px-5 view-change view-hide";

      if(type == "in"){
        document.getElementById('signIn').className="bg-light p-3 m-0";
        document.getElementById('signInForm').className="px-5 view-change view-show";
      }else{
        document.getElementById('signUp').className="bg-light p-3 m-0";
        document.getElementById('signUpForm').className="px-5 view-change view-show";
      }
    }
  
  div(class="container")
    div(class="row")
      div(class="col-md-12 col-lg-7")
      .jumbotron(style="background:#f5f5f5")
        h1.display-4 欢迎光临 
        p.lead
          | 这是一个开发注册的系统，你的注册让我感到十分荣幸
        p
          | - 小甘童鞋宣（ganxunzou@163.com）
        hr.my-4
      div(class="col-md-12 col-lg-5")
        div( class="border rounded pb-5 bg-white")
          div(class="text-center border-bottom border-primary") 
            div(class="row")
              div(class="col-6")
                h3(class="bg-light p-3 m-0" id="signIn" onclick="something('in')") Sign in  
              div(class="col-6")
                h3(class="p-3 m-0"  id="signUp" onclick="something('up')") Sign up
          form(id="signInForm" action="/users/login"  method="post" class="px-5 view-change")
            div(class="from-group py-3")
              label(for="") Username:
              input(type="text" name="username" class="form-control" placeholder="Enter Username" required )    
            div(class="from-group pb-3")
              label(for="") Password:
              input(type="password" name="password" class="form-control" placeholder="Enter Password" required)       
            div(class="form-check pb-3")
              input(type="checkbox" class="form-check-input" placeholder="Enter Password") 
              label(class="form-check-label") Remeber me
            button(type="submit" class="btn btn-primary btn-lg btn-block") Sign in

          form(id="signUpForm" action="/users/register" method="post" class="px-5 view-change view-hide")
            div(class="from-group py-3")
              label(for="") Username:
              input(type="text" name="username" class="form-control" placeholder="Enter Username" required)    
            div(class="from-group pb-3")
              label(for="") Password:
              input(type="password" name="password" class="form-control" placeholder="Enter Password" required)
            div(class="from-group pb-3")
              label(for="") Email:
              input(type="email" name="email" class="form-control" placeholder="Enter Email" required)
            button(type="submit" class="btn btn-primary btn-lg btn-block") Sign in

